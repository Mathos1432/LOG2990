{
  "name": "server",
  "description": "Projet de base pour le cours de LOG2990",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/server/app/www.js\" ",
    "lint": "tslint app/**/*.ts app/*.ts --force -t verbose",
    "test": "tsc && concurrently \"tsc -w\" \"karma start karma.conf.js\"",
    "test-once": "tsc && karma start karma.conf.js --single-run || npm run-script coverage",
    "coverage": "remap-istanbul -i coverage/coverage-final.json -o coverage -t html",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false"
  },
  "dependencies": {
    "@types/body-parser": "0.0.32",
    "@types/express": "^4.0.32",
    "@types/express-serve-static-core": "^4.0.39",
    "@types/node": "^6.0.45",
    "@types/node-uuid": "0.0.28",
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "cors": "^2.8.1",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "morgan": "~1.6.1",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-alpha6",
    "serve-favicon": "~2.3.0",
    "systemjs": "0.19.39"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/cookie-parser": "^1.3.30",
    "@types/cors": "^2.8.1",
    "@types/mocha": "^2.2.36",
    "@types/morgan": "^1.7.32",
    "chai": "^3.5.0",
    "concurrently": "^3.0.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "mocha": "^3.2.0",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4",
    "tslint": "^4.2.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.5.1"
  }
}
